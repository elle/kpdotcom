<% content_for :secondary_content do %>
  <p><%= link_to 'Add service', new_admin_service_path %></p>
<% end %>
<h1>Services</h1>
<div id="success">
  <% if flash[:notice] %>
    <%= render :partial => 'shared/success', :locals => {:msg => flash[:notice]} %>
  <% end %>
</div>
<table cellspacing="5" cellpadding="5">
  <thead>
    <tr><th>Rank</th><th>Name</th><th>Heading</th><th>Actions</th></tr>
  </thead>
  <tbody>
    <% @services.each do |service| %>
      <tr><td><%= service.rank %></td><td><%= service.name %></td><td><%= service.heading %></td>
        <td><%= link_to 'Edit', edit_admin_service_path(service) %> <%= link_to 'Delete', admin_service_path(service), :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
